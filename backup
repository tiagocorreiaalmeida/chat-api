// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User{
  id    Int     @default(autoincrement()) @id
  username String @unique
  email String @unique
  password String
  isActive Boolean @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime?
  lastSeen DateTime?
}

model Conversation {
  id    Int     @default(autoincrement()) @id
  name String
  creator User
  isGroup Boolean @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime? @updatedAt

  participants Participant[]
  messages Message[]
}

enum ParticipantType {
  ADMIN
  MEMBER
}

model Participant {
  id Int @default(autoincrement()) @id
  conversation Conversation
  user User
  type ParticipantType @default(value: MEMBER)
  createdAt DateTime @default(now())
  updatedAt DateTime? @updatedAt
}

enum MessageType {
  TEXT
  SYSTEM
}

model Message {
 id Int @default(autoincrement()) @id
  conversation Conversation
  sender Participant
  type MessageType @default(value: TEXT)
  message String
  createdAt DateTime @default(now())
  updatedAt DateTime? @updatedAt

  receivers Receiver[]
}

enum MessageStatus {
  SENT
  DELIVERED
}

model Receiver {
   id Int @default(autoincrement()) @id
   participantId Participant
   message Message
   status MessageStatus @default(value: SENT)
   createdAt DateTime @default(now())
   updatedAt DateTime? @updatedAt
   deletedAt DateTime?
}